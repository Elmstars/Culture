<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailNew">

    <TextView
      android:id="@+id/s_titleDetail"
      style="@style/TextAppearance.AppCompat.Subhead"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="16dp"
      android:text="@string/street_title_placeholder"
      android:textColor="?android:textColorSecondary"
      android:textSize="40sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/streetDetail"
      style="@style/TextAppearance.AppCompat.Subhead"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/s_titleDetail"
      android:padding="16dp"
      android:text="@string/street_detail_placeholder"
      android:textSize="20sp" />

  </RelativeLayout>
</ScrollView>
